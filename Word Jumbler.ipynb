    "from tkinter import * \n",
    "from tkinter.ttk import * \n",
    "from time import strftime \n",
    "from tkinter import messagebox\n",
    "from PIL import ImageTk,Image\n",
    "import random\n",
    "\n",
    "root = Tk()\n",
    "root.title(\"Identify the phrase\")\n",
    "root.geometry(\"1200x710\")\n",
    "root.config(background=\"#F6EEE0\")\n",
    "\n",
    "#getting the files containing \n",
    "#the phrases\n",
    "\n",
    "with open('phrases.txt') as f:\n",
    "    phrases = f.read().splitlines() \n",
    "f.close() \n",
    "random.shuffle(phrases)\n",
    "\n",
    "def generate_jumbled_phrases(var):\n",
    "    #removing the spaces and the end punctuation\n",
    "    #and storing them to add them later\n",
    "    list3=[]\n",
    "    for i in range(len(var)):\n",
    "        if var[i]==' ':\n",
    "            list3.append(i)\n",
    "        \n",
    "        \n",
    "    var1=var.replace(' ','')\n",
    "    var1=var1.replace(var1[len(var1)-1],'')\n",
    "    list1=[]\n",
    "    list1[:0]=var1 \n",
    "    list2=[]\n",
    "\n",
    "    #scibling them\n",
    "    while (len(list1)!=0):\n",
    "        c=random.choice(list1)\n",
    "        list2.append(c)\n",
    "        list1.remove(c)\n",
    "\n",
    "    list2.append(var[len(var)-1])   \n",
    "    for x in list3:\n",
    "        list2.insert(x,' ')\n",
    "    \n",
    "    str1 = ''.join(list2)\n",
    "    return str1\n",
    "\n",
    "#setting the default time of the game\n",
    "timeleft=30\n",
    "\n",
    "#options for changing time\n",
    "def change_time():\n",
    "    #window for changing game time\n",
    "    top = Toplevel()\n",
    "    #changing time options\n",
    "    r=IntVar()\n",
    "    \n",
    "    lbl=Label(top,text='Customize you time', font=('Helvetica', 15)).pack()\n",
    "    def update_time(value):\n",
    "        global timeleft\n",
    "        timeleft+=int(value)*10 \n",
    "        global updated_timeleft\n",
    "        updated_timeleft=timeleft\n",
    "        timeLabel.config(text= \"Time left: \" + str(timeleft))\n",
    "        \n",
    "    \n",
    "    Radiobutton(top,text='30 seconds',variable=r, value=0,command= lambda: update_time(r.get())).pack()\n",
    "    Radiobutton(top,text='40 seconds',variable=r, value=1,command= lambda: update_time(r.get())).pack()\n",
    "    Radiobutton(top,text='50 seconds',variable=r, value=2,command= lambda: update_time(r.get())).pack()\n",
    "    Radiobutton(top,text='1 minute',variable=r, value=3,command= lambda: update_time(r.get())).pack()\n",
    "    \n",
    "    okay_button=Button(top,text='Done!',command=top.destroy)\n",
    "    okay_button.pack()\n",
    "        \n",
    "    \n",
    "    \n",
    "\n",
    "#initializing the score\n",
    "score=0\n",
    "\n",
    "#intialing the phrase\n",
    "p=0\n",
    "\n",
    "#Starting the game\n",
    "def start_game():\n",
    "    global score\n",
    "    score=0\n",
    "    #start the counting\n",
    "    if timeleft==30 or timeleft==40 or timeleft==50 or timeleft==60:\n",
    "        countdown()\n",
    "     \n",
    "    scoreLabel.config(text = \"Score: \" + str(score))\n",
    "    next_phrase()\n",
    "    \n",
    "#Function for changing \n",
    "#the phrases after a fixed time\n",
    "def next_phrase():\n",
    "    global timeleft \n",
    "    global p\n",
    "    global phrases\n",
    "  \n",
    "    # if a game is currently in play \n",
    "    if timeleft > 0: \n",
    "  \n",
    "        # make the text entry box active. \n",
    "        e.focus_set() \n",
    "        e.delete(0, END) \n",
    "        \n",
    "        # change the phrase  \n",
    "        label.config(text = generate_jumbled_phrases(phrases[p]))\n",
    " \n",
    "  \n",
    "  \n",
    " #Countdown timer function  \n",
    "def countdown():\n",
    "                     \n",
    "  \n",
    "    global timeleft\n",
    "    global updated_timeleft\n",
    "  \n",
    "    # if a game is in play \n",
    "    if timeleft > 0: \n",
    "  \n",
    "        # decrement the timer. \n",
    "        timeleft -= 1\n",
    "          \n",
    "        # update the time left label \n",
    "        timeLabel.config(text = \"Time left: \"\n",
    "                               + str(timeleft)) \n",
    "                                 \n",
    "        # run the function again after 1 second. \n",
    "        timeLabel.after(1000, countdown) \n",
    "        \n",
    "    elif timeleft==0:\n",
    "        messagebox.showinfo(\"Game Ended\",\"Your score is\" + str(score),icon='info')\n",
    "        \n",
    "        #ask if the user\n",
    "        #wants to play again\n",
    "        result = messagebox.askquestion(\"Start Again\", \"Wanna Play Again?\", icon='question')\n",
    "        if result == 'yes':\n",
    "            timeleft=updated_timeleft\n",
    "            start_game()\n",
    "        else:\n",
    "            messagebox.showinfo(\"Thankyou\",\"Thankyou for playing you can Exit from Options menu\")\n",
    "                     \n",
    "    \n",
    "def match_text():\n",
    "    global score\n",
    "    global p\n",
    "    global phrases\n",
    "     \n",
    "    #check if nothing is typed                \n",
    "    if e.get()=='':\n",
    "        messagebox.showerror(\"Empty box\",\"You have to attempt!\",icon='warning')\n",
    "    \n",
    "    #check if it is correct\n",
    "     #and if it is then increment\n",
    "     #the score\n",
    "    elif e.get()==phrases[p]:\n",
    "         score+=1\n",
    "    \n",
    "    \n",
    "    scoreLabel.config(text = \"Score: \" + str(score))\n",
    "    p+=1\n",
    "    next_phrase()                \n",
    "\n",
    "def are_you_sure():\n",
    "    result=messagebox.askquestion(\"Exit\",\"Are you sure you wanna exit?\",icon='warning')\n",
    "    if result=='yes':\n",
    "        root.destroy()\n",
    "    else:\n",
    "        pass\n",
    "    \n",
    "                     \n",
    "#building GUI for it\n",
    "\n",
    "#Creating opening window\n",
    "open_win=Toplevel()\n",
    "open_win.geometry(\"1200x710\")\n"'
    "    \n",
    "wel_label=Label(open_win, text='WELCOME\n Phrase Scrambler', font=('Arial', 30))\n",
    "wel_label.pack()\n",
    "play_button=Button(open_win, text='Play Game', command=open_win.destroy)\n",
    "play_button.pack()\n",
    "    \n",
    "open_win.attributes(\"-topmost\", True)\n",

    "   \n",

    "#creating menubar\n",
    "menubar = Menu(root) \n",
    "  \n",
    "# Adding File Menu and commands \n",
    "file = Menu(menubar, tearoff = 0) \n",
    "menubar.add_cascade(label ='Options', menu = file) \n",
    "file.add_command(label ='Change Game Time', command = change_time)  \n",
    "file.add_separator() \n",
    "file.add_command(label ='Exit', command = are_you_sure) \n",
    "  \n",
    "# display Menu \n",
    "root.config(menu = menubar) \n",
    "\n",
    "\n",
    "\n",
    " # add an instructions label \n",
    "instructions = Label(root, text = \"Type in the phrase you think it is\", background=\"brown\", foreground='black', font = ('Helvetica', 50)) \n",
    "instructions.grid(row=0,column=1)  \n",
    "  \n",
    "# add a score label \n",
    "scoreLabel = Label(root, text = \"Press START GAME to start\", background=\"brown\", foreground='black', font = ('Helvetica', 40)) \n",
    "scoreLabel.grid(row=1,column=1)\n",
    "  \n",
    "# add a time left label \n",
    "timeLabel = Label(root, text = \"Time left: \" + str(timeleft),background=\"brown\", foreground='black', font = ('Helvetica', 70)) \n",
    "                \n",
    "timeLabel.grid(row=2,column=1) \n",
    "\n",
    "#Adding image\n",
    "image = Image.open('Phrase Scrambler.png')\n",
    "# The (450, 350) is (height, width)\n",
    "image = image.resize((450, 350), Image.ANTIALIAS)\n",
    "my_img = ImageTk.PhotoImage(image)\n",
    "image_label=Label(image=my_img)\n",
    "image_label.grid(row=2,column=5)\n",
    "\n",
    "label=Label(root, foreground='black', font = ('Helvetica', 60))\n",
    "label.grid(row=3,column=1)\n",
    "\n",
    "\n",
    "#add the space for text to be entered                     \n",
    "e=Entry(root)\n",
    "e.grid(row=4,column=1,padx=40, pady=20)\n",
    "\n",
    "#add a button to check\n",
    "check_button=Button(root,text=\"Check!\", command=match_text)\n",
    "check_button.grid(row=5,column=2)\n",
    "\n",
    "#button to start game\n",
    "start_button=Button(root,text=\"Start Game\",command=start_game)\n",
    "start_button.grid(row=5,column=1)\n",
    "                     \n",
    "                     \n",
    "e.focus_set()  \n",
    "\n",
    "                     \n",
    "root.mainloop()\n",
    "\n",
    "\n",
    "\n"
   ]
  },
